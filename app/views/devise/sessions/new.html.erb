<%# app/views/sessions/new.html.erb %>

<div class="container">

  <h1 style="margin-top: 120px;">Se connecter</h1>

  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
    <div class="form-group">
      <%= f.label :email, 'Email : ' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: false, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Mot de passe : ' %>
      <%= f.password_field :password, autocomplete: "current-password", required: false, class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.label :remember_me, 'Se souvenir de moi' %>
        <%= f.check_box :remember_me, class: 'form-check-input' %>
      </div>
    <% end %>

    <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>

  <%= render "devise/shared/links" %>

</div>










