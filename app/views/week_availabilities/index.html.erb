<div class="container">
  <h1 style="margin-top: 120px;">Week Availabilities</h1>

  <% if @week_availabilities.any? %>
    <ul>
      <% @week_availabilities.each do |week_availability| %>
        <%= render 'week_availability_form', week_availability: week_availability %>
      <% end %>
    </ul>
  <% else %>
    <p>No week availabilities available.</p>
  <% end %>
</div>



