<div class="container mt-5">
    <h1 class="mb-4">Users</h1>

    <% @users.each do |user| %>
        <div class="mb-3">
            <p><%= user.email %> (<%= user.is_admin? ? 'Admin' : 'User' %>)</p>
            <% if user.patient || user.therapist %>
                <p>
                    <span class="badge <%= user.patient ? 'bg-primary' : 'bg-success' %>">
                        <%= user.patient ? 'Patient' : 'Therapist' %>
                    </span>
                </p>
            <% end %>
        </div>
    <% end %>
</div>
