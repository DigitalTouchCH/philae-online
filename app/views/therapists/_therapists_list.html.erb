<!-- app/views/therapists/_therapists_list.html.erb -->
<% therapists.each do |therapist| %>
  <div class="card mb-4" data-controller="edit-therapist">
    <div class="card-body">
      <%= form_with(model: therapist, local: true) do |f| %>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="form-group">
            <%= f.label :first_name, 'Prénom' %>
            <%= f.text_field :first_name, readonly: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :last_name, 'Nom' %>
            <%= f.text_field :last_name, readonly: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :is_manager, 'Manager' %>
            <%= f.hidden_field :is_manager, value: 0 %>
            <%= f.check_box :is_manager , disabled: true, data: { action: "click->edit-therapist#toggleCheckbox" }, checked_value: 1, unchecked_value: 0 %>
          </div>
          <div>
            <%= button_tag 'Edit', type: 'button', class: "editButton btn btn-outline-primary", data: { action: "click->edit-therapist#edit" } %>
            <%= f.submit "Save", class: "saveButton btn btn-outline-success d-none" %>
          </div>
        </div>
        <%= link_to "Supprimer", therapist_path(therapist), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" } %>
      <% end %>
    </div>
  </div>
<% end %>
