<div class="container mt-5">
  <h1 style="margin-top: 120px;">Nouveau Patient</h1>

  <%= form_with(model: @patient, local: true) do |f| %>

    <div class="form-group">
      <%= f.label :first_name, 'Prénom' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, 'Nom' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth, 'Date de naissance' %>
      <%= f.date_field :date_of_birth, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :address, 'Adresse' %>
      <%= f.text_area :address, class: 'form-control', rows: 3 %>
    </div>

    <div class="form-group">
      <%= f.label :tel1, 'Téléphone 1' %>
      <%= f.telephone_field :tel1, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :tel2, 'Téléphone 2' %>
      <%= f.telephone_field :tel2, class: 'form-control' %>
    </div>

    <%= f.submit 'Créer le patient', class: 'btn btn-primary' %>

  <% end %>

  <%= link_to 'Retour à la liste des patient', patients_path, class: 'btn btn-secondary mt-3' %>
