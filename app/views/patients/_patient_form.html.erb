<div class="card mb-4" data-controller="edit-form">

  <%= form_with(model: @patient, local: true) do |f| %>

    <div class="form-group">
      <%= f.label :first_name, 'Prénom' %>
      <%= f.text_field :first_name, class: 'form-control', readonly: true %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, 'Nom' %>
      <%= f.text_field :last_name, class: 'form-control', readonly: true %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth, 'Date de naissance' %>
      <%= f.date_field :date_of_birth, class: 'form-control', readonly: true %>
    </div>

    <div class="form-group">
      <%= f.label :address, 'Adresse' %>
      <%= f.text_area :address, class: 'form-control', readonly: true, rows: 3 %>
    </div>

    <div class="form-group">
      <%= f.label :tel1, 'Téléphone 1' %>
      <%= f.telephone_field :tel1, class: 'form-control', readonly: true %>
    </div>

    <!-- Autres champs selon le besoin -->

    <div>
      <%= button_tag 'Edit', type: 'button', class: "editButton btn btn-outline-primary", data: { action: "click->edit-form#edit" } %>
      <%= f.submit "Save", class: "saveButton btn btn-outline-success d-none" %>
    </div>

  <% end %>

</div>
